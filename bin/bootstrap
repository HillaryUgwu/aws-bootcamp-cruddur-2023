#!/usr/bin/bash
set -e # stop if it fails at any point

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="bootstrap"
printf "${CYAN}====== ${LABEL}${NO_COLOR}\n"

ABS_PATH=$(readlink -f "$0")
BIN_DIR=$(dirname $ABS_PATH)
HOME_DIR=$(dirname $BIN_DIR)

source "$HOME_DIR/bin/ecr/login"
ruby "$HOME_DIR/bin/backend/generate-env"
ruby "$HOME_DIR/bin/frontend/generate-env"